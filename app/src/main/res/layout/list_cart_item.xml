<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/container_info"
                    android:layout_toLeftOf="@+id/iv_image"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grocery - Meat"
                        android:id="@+id/tv_category"
                        android:layout_marginBottom="9dp"
                        android:textColor="@color/black"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pork belly"
                        android:id="@+id/tv_item_name"
                        android:layout_marginBottom="9dp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download and START"
                        android:id="@+id/tv_item_description"
                        android:layout_marginBottom="9dp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:id="@+id/tv_price"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="15dp"
                        android:textColor="@color/custom_dialog_text" />

                </LinearLayout>

                <com.goforer.base.ui.view.SquircleImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/iv_image"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    app:riv_border_color="@color/list_divider"
                    app:riv_border_width="1dp"
                    app:riv_corner_radius="15dp"
                    app:riv_mutate_background="true"
                    app:riv_oval="false"
                    app:riv_tile_mode="clamp"
                    android:src="@drawable/sample"
                    android:layout_marginTop="10dp" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>